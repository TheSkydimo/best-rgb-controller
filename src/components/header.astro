---
import { Icon } from "astro-icon/components";
import Logomark from "~/icons/logomark.svg";
import LanguageSwitcher from "~/components/language-switcher.astro";
import type { LanguageLink, Locale } from "~/i18n/config";
import type { NavItem } from "~/types";

export interface Props {
  navItems: Array<NavItem>;
  locale: Locale;
  navLabel: string;
  openLabel: string;
  closeLabel: string;
  languageLabel: string;
  languageOptions: LanguageLink[];
  downloadUrl?: string;
  downloadLabel?: string;
}

const {
  navItems,
  locale,
  navLabel,
  openLabel,
  closeLabel,
  languageLabel,
  languageOptions,
  downloadUrl,
  downloadLabel
} = Astro.props;
---

<header id="page-header" class="page-header">
  <div class="mx-auto flex w-full max-w-7xl items-center justify-between">
    <a class="flex items-center gap-3 hover:!text-white" href="/">
      <span class="sr-only">Skydimo</span>
      <Logomark class="size-16" aria-hidden="true" />
    </a>
    <div>
      <div class="flex items-center gap-6">
        <nav class="hidden sm:block" aria-label={navLabel}>
          <ul class="flex items-center gap-6">
            {
              navItems.map(({ title, url }) => (
                <li>
                  <a class="text-sm" href={url}>
                    {title}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
        {
          downloadUrl &&
            downloadLabel && (
              <a
                href={downloadUrl}
                class="hidden rounded-full bg-primary px-4 py-2 text-xs font-semibold text-white shadow-sm shadow-primary/40 transition hover:bg-primary/90 sm:inline-flex sm:items-center sm:justify-center"
              >
                {downloadLabel}
              </a>
            )
        }
        <LanguageSwitcher
          label={languageLabel}
          currentLocale={locale}
          options={languageOptions}
        />
        <button
          id="open-nav-button"
          type="button"
          class="btn sm:hidden"
          aria-label={openLabel}
        >
          <Icon name="mdi:menu" class="size-8" />
        </button>
      </div>
      <div id="menu-modal" class="modal hidden" aria-hidden="true">
        <div class="fixed inset-0 bg-default px-8 py-4 text-default">
          <div class="space-y-4" role="dialog" aria-modal="true">
            <header class="text-right">
              <button
                id="close-nav-button"
                type="button"
                class="btn"
                aria-label={closeLabel}
              >
                <Icon name="mdi:close" class="size-8" />
              </button>
            </header>
            <div class="flex justify-center">
            <Logomark class="size-16" aria-hidden="true" />
            </div>
            <div class="flex justify-center">
              <LanguageSwitcher
                label={languageLabel}
                currentLocale={locale}
                options={languageOptions}
              />
            </div>
            <nav aria-label={navLabel}>
              <ul class="flex flex-col">
                {
                  navItems.map(({ title, url }) => (
                    <li>
                      <a class="block py-4 text-center text-xl" href={url}>
                        {title}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </nav>
            {
              downloadUrl &&
                downloadLabel && (
                  <div class="flex justify-center">
                    <a
                      href={downloadUrl}
                      class="mt-4 inline-flex min-w-48 items-center justify-center rounded-full bg-primary px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-primary/40 transition hover:bg-primary/90"
                    >
                      {downloadLabel}
                    </a>
                  </div>
                )
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import MicroModal from "micromodal";
  import invariant from "tiny-invariant";

  const menuModalId = "menu-modal";

  const header = document.querySelector("#page-header") as HTMLElement;
  const menu = document.querySelector(`#${menuModalId} ul`);
  const openNavButton = document.querySelector("#open-nav-button");
  const closeNavButton = document.querySelector("#close-nav-button");

  invariant(header, "header should not be null");
  invariant(menu, "menu should not be null");
  invariant(openNavButton, "openNavButton should not be null");
  invariant(closeNavButton, "closeNavButton should not be null");

  const openMenu = () => {
    MicroModal.show(menuModalId, { disableScroll: true });
  };

  const closeMenu = () => {
    MicroModal.close(menuModalId);
  };

  const updateHeaderState = () => {
    const scrolled = window.scrollY > 0;
    header.classList.toggle("header--scrolled", scrolled);
  };

  updateHeaderState();

  window.addEventListener("scroll", updateHeaderState, { passive: true });

openNavButton.addEventListener("click", openMenu);
closeNavButton.addEventListener("click", closeMenu);

  menu.addEventListener("click", (event) => {
    if ((event.target as HTMLElement).tagName === "A") {
      closeMenu();
    }
  });
</script>

<noscript>
  <style>
    #open-nav-button {
      display: none;
    }
  </style>
</noscript>

<style>
  .page-header {
    @apply fixed inset-x-0 top-0 z-20 flex w-full items-center justify-between border-b border-transparent bg-transparent px-8 py-4 text-white transition-colors;
  }
  .header--scrolled {
    @apply border-default backdrop-blur;
    background-color: var(--color-background);
    background-color: color-mix(
      in srgb,
      var(--color-background) 90%,
      transparent
    );
  }
  .modal.is-open {
    @apply block;
  }
</style>

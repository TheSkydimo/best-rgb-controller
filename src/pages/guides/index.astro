---
import "@fontsource-variable/inter";
import Footer from "~/components/footer.astro";
import GoogleAnalytics from "~/components/google-analytics.astro";
import Header from "~/components/header.astro";
import LanguagePreference from "~/components/language-preference.astro";
import { DEFAULT_LOCALE } from "~/i18n/config";
import { buildPageData } from "~/i18n/page-data";
import "~/styles/index.css";

const { generator, site } = Astro;
const locale = DEFAULT_LOCALE;
const pageData = buildPageData(locale, site, "/guides/");
const { copy, languageOptions } = pageData;

const PAGE_TITLE = "RGB Controller Guides – Best RGB Controller";
const PAGE_DESCRIPTION =
  "Step‑by‑step guides for choosing RGB software, syncing lights across brands, reducing screen‑sync lag and building better lighting profiles.";

const navItems = [
  { title: "Best Picks", url: "/#best-picks" },
  { title: "Reviews", url: "/reviews/" },
  { title: "Comparisons", url: "/comparisons/" },
  { title: "Guides", url: "/guides/" },
  { title: "Device Compatibility", url: "/compatibility/" },
  { title: "FAQ", url: "/faq/" },
];
---

<!doctype html>
<html lang={locale} class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <LanguagePreference locale={locale} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    {generator && <meta name="generator" content={generator} />}
    <title>{PAGE_TITLE}</title>
    <meta name="description" content={PAGE_DESCRIPTION} />
    <meta property="og:title" content={PAGE_TITLE} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={PAGE_DESCRIPTION} />
    <meta property="og:image" content={pageData.head.image} />
    <meta property="og:url" content={pageData.head.canonical} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href="https://best-rgb-controller.com/guides/" />

    <GoogleAnalytics />
  </head>
  <body
    class="h-full overflow-x-hidden bg-default pt-24 text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header
      navItems={navItems}
      locale={locale}
      navLabel={copy.nav.ariaLabel}
      openLabel={copy.nav.openLabel}
      closeLabel={copy.nav.closeLabel}
      languageLabel={copy.language.label}
      languageOptions={languageOptions}
    />

    <main class="px-8 pt-16 pb-24">
      <section class="mx-auto max-w-7xl space-y-6">
        <header class="space-y-3">
          <p class="text-xs font-semibold uppercase tracking-[0.25em] text-primary">
            Guides
          </p>
          <h1 class="text-balance text-3xl font-extrabold tracking-tight sm:text-4xl">
            RGB controller guides &amp; tutorials
          </h1>
          <p class="max-w-3xl text-sm text-offset sm:text-base">
            Practical, step‑by‑step articles that help you pick the right RGB software, sync lights
            across brands and troubleshoot common issues like laggy screen‑sync modes.
          </p>
        </header>

        <div class="mt-6 grid gap-4 md:grid-cols-2">
          <article class="space-y-2 rounded-2xl border border-slate-700/70 bg-offset/40 p-5">
            <h2 class="text-base font-semibold">
              <a href="/guides/how-to-choose-rgb-software/" class="hover:text-primary">
                How to choose an RGB controller software
              </a>
            </h2>
            <p class="text-sm text-offset">
              A complete selection framework that balances device compatibility, features,
              performance, privacy and cost.
            </p>
          </article>

          <article class="space-y-2 rounded-2xl border border-slate-700/70 bg-offset/40 p-5">
            <h2 class="text-base font-semibold">
              <a href="/guides/unify-rgb-across-brands/" class="hover:text-primary">
                How to sync RGB lights across different brands
              </a>
            </h2>
            <p class="text-sm text-offset">
              Strategies for building a unified lighting setup when your keyboard, mouse, fans and
              strips come from multiple ecosystems.
            </p>
          </article>

          <article class="space-y-2 rounded-2xl border border-slate-700/70 bg-offset/40 p-5">
            <h2 class="text-base font-semibold">
              <a href="/guides/reduce-screen-sync-lag/" class="hover:text-primary">
                How to reduce lag in RGB screen sync
              </a>
            </h2>
            <p class="text-sm text-offset">
              Troubleshooting checklist for more responsive screen‑linked lighting on different
              resolutions and refresh rates.
            </p>
          </article>

          <article class="space-y-2 rounded-2xl border border-slate-700/70 bg-offset/40 p-5">
            <h2 class="text-base font-semibold">
              RGB profiles &amp; presets (coming soon)
            </h2>
            <p class="text-sm text-offset">
              In the future we plan to publish ready‑made profile ideas and presets you can
              reproduce in your favourite controller.
            </p>
          </article>
        </div>
      </section>
    </main>

    <Footer linkLabels={copy.footer.links} />
  </body>
</html>



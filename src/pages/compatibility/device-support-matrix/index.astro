---
import "@fontsource-variable/inter";
import Footer from "~/components/footer.astro";
import GoogleAnalytics from "~/components/google-analytics.astro";
import Header from "~/components/header.astro";
import LanguagePreference from "~/components/language-preference.astro";
import { DEFAULT_LOCALE } from "~/i18n/config";
import { buildPageData } from "~/i18n/page-data";
import "~/styles/index.css";

const { generator, site } = Astro;
const locale = DEFAULT_LOCALE;
const pageData = buildPageData(locale, site);
const { copy, languageOptions } = pageData;

const PAGE_TITLE = "RGB Software Device Support Matrix (High‑Level)";
const PAGE_DESCRIPTION =
  "High‑level view of which RGB controllers tend to support which device categories. Always cross‑check against official compatibility lists for exact models.";

const navItems = [
  { title: "Best Picks", url: "/#best-picks" },
  { title: "Reviews", url: "/reviews/" },
  { title: "Comparisons", url: "/comparisons/" },
  { title: "Guides", url: "/guides/" },
  { title: "Device Compatibility", url: "/compatibility/" },
  { title: "FAQ", url: "/faq/" },
];
---

<!doctype html>
<html lang={locale} class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <LanguagePreference locale={locale} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    {generator && <meta name="generator" content={generator} />}
    <title>{PAGE_TITLE}</title>
    <meta name="description" content={PAGE_DESCRIPTION} />
    <meta property="og:title" content={PAGE_TITLE} />
    <meta property="og:type" content="article" />
    <meta property="og:description" content={PAGE_DESCRIPTION} />
    <meta property="og:image" content={pageData.head.image} />
    <meta property="og:url" content={pageData.head.canonical} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href="https://best-rgb-controller.com/compatibility/device-support-matrix/" />

    <GoogleAnalytics />
  </head>
  <body
    class="h-full overflow-x-hidden bg-default pt-24 text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header
      navItems={navItems}
      locale={locale}
      navLabel={copy.nav.ariaLabel}
      openLabel={copy.nav.openLabel}
      closeLabel={copy.nav.closeLabel}
      languageLabel={copy.language.label}
      languageOptions={languageOptions}
    />

    <main class="px-8 pt-16 pb-24">
      <article class="mx-auto max-w-5xl space-y-8">
        <header class="space-y-3">
          <p class="text-xs font-semibold uppercase tracking-[0.25em] text-primary">
            Compatibility – Device Support Matrix
          </p>
          <h1 class="text-balance text-3xl font-extrabold tracking-tight sm:text-4xl">
            RGB software device support matrix (high‑level)
          </h1>
          <p class="max-w-3xl text-sm text-offset sm:text-base">
            This page is a high‑level summary of typical coverage patterns. For exact models, always
            consult each tool&apos;s official compatibility list.
          </p>
        </header>

        <section class="overflow-x-auto rounded-2xl border border-slate-700/70 bg-offset/40 p-4 text-sm">
          <table class="min-w-full text-left text-xs sm:text-sm">
            <thead class="text-muted">
              <tr>
                <th class="py-2 pr-4 font-semibold text-offset">Device category</th>
                <th class="py-2 pr-4 font-semibold text-primary">Skydimo</th>
                <th class="py-2 pr-4 font-semibold">OpenRGB</th>
                <th class="py-2 pr-4 font-semibold">SignalRGB</th>
                <th class="py-2 pr-0 font-semibold">Vendor tools</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-700/60">
              <tr>
                <th class="py-2 pr-4 font-medium text-offset">Keyboards &amp; mice</th>
                <td class="py-2 pr-4 text-primary">Broad (varies by brand)</td>
                <td class="py-2 pr-4">Broad</td>
                <td class="py-2 pr-4">Broad</td>
                <td class="py-2 pr-0">Excellent inside own ecosystem</td>
              </tr>
              <tr>
                <th class="py-2 pr-4 font-medium text-offset">Motherboard &amp; RAM</th>
                <td class="py-2 pr-4 text-primary">Good for common chipsets</td>
                <td class="py-2 pr-4">Good</td>
                <td class="py-2 pr-4">Good</td>
                <td class="py-2 pr-0">Best for own brand</td>
              </tr>
              <tr>
                <th class="py-2 pr-4 font-medium text-offset">Case fans &amp; AIO</th>
                <td class="py-2 pr-4 text-primary">Good</td>
                <td class="py-2 pr-4">Good</td>
                <td class="py-2 pr-4">Good</td>
                <td class="py-2 pr-0">Often very good inside ecosystem</td>
              </tr>
              <tr>
                <th class="py-2 pr-4 font-medium text-offset">LED strips &amp; ambient</th>
                <td class="py-2 pr-4 text-primary">Good with supported controllers</td>
                <td class="py-2 pr-4">Good</td>
                <td class="py-2 pr-4">Good</td>
                <td class="py-2 pr-0">Varies</td>
              </tr>
            </tbody>
          </table>
          <p class="mt-3 text-[11px] text-muted">
            This table is intentionally approximate and for orientation only. Always verify support
            for your exact devices.
          </p>
        </section>

        <footer class="border-t border-slate-700/60 pt-6 text-sm text-offset">
          <p>
            Next steps:
            <a
              href="/compatibility/"
              class="ml-1 underline decoration-slate-500/60 decoration-dotted underline-offset-2 hover:text-primary"
            >
              return to the compatibility hub
            </a>
            or
            <a
              href="/best-rgb-controller/"
              class="ml-1 underline decoration-slate-500/60 decoration-dotted underline-offset-2 hover:text-primary"
            >
              read the main 2025 guide
            </a>
            .
          </p>
        </footer>
      </article>
    </main>

    <Footer linkLabels={copy.footer.links} />
  </body>
</html>



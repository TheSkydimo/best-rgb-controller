      <!-- Why Skydimo / comparison -->
      <section
        id="why-skydimo"
        class="mx-auto mt-24 max-w-7xl space-y-6"
        aria-labelledby="why-heading"
      >
        <div class="space-y-3">
          <h2
            id="why-heading"
